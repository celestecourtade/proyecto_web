---
import Layout from '../layouts/Layout.astro';
---

<Layout>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
  </head>
  <body>
    <video autoplay muted loop class="video-background">
      <source src="/images/index_video.mp4" type="video/mp4" />
    </video>
  </body>
    <style>
    .video-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        object-position: 70% center; 
    }
</style>
</html>
</Layout>
