<div class="popup-container left-align" id="popup">
  <div class="popup-card">
   <div class="popup-title">Contáctanos</div>
    <form class="popup-form" id="contactForm">
       <button type="button" class="exit">×</button>
      <input class="popup-input" name="name" id="nameInput" placeholder="Nombre Completo"  />
      <input class="popup-input" name="email" placeholder="Email" id="emailInput"  />
      <textarea class="popup-input" name="mensaje" id="messageInput" placeholder="Mensaje..."></textarea>
      <button class="popup-button" type="submit" >Enviar</button>
    </form>
      <div style="min-height: 24px; text-align: center;">
        <span class="errorMessage" id="error"></span>
      </div>
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Roboto+Serif:opsz,wght@8..144,800&display=swap');

  .popup-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.6);
    display: none; /* Oculto por defecto */
    align-items: center;
    justify-content: center;
    padding: 20px;
    box-sizing: border-box;
    z-index: 999;
  }

  .popup-container.active {
    display: flex;
  }

  .popup-container.left-align {
    justify-content: flex-start;
  }

  .popup-card {
    background-color: oklch(0.9456 0.013 185.09 / 68.58%);
    padding: 40px 20px;
    border-radius: 20px;
    border: 2px solid #333;
    box-shadow: 6px 6px #000000;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 400px;
    box-sizing: border-box;
  }

  .popup-title {
    font-family: 'Roboto Serif', serif;
    font-size: 20px;
    font-weight: bold;
    color: #000;
    text-align: center;
    margin-bottom: 25px;
    padding-bottom: 10px;
  }

  .popup-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
    width: 100%;
  }

  .popup-input {
    width: 90%;
    margin: 0 auto;
    padding: 12px;
    font-size: 17px;
    border-radius: 6px;
    border: 2px solid #333;
    box-shadow: 3px 3px #333;
    resize: none;
    font-family: "Courier New", Courier, monospace;
    box-sizing: border-box;
  }

  .popup-button {
    width: 100%;
    padding: 12px;
    background-color: #fff;
    font-weight: bold;
    border-radius: 10px;
    border: 2px solid #333;
    box-shadow: 3px 3px #333;
    cursor: pointer;
    transition: transform 0.1s;
    font-family: 'Roboto Serif', serif;
    margin-top: 20px;
    font-size: 18px;
  }

  .popup-button:active {
    transform: translate(2px, 2px);
    box-shadow: 0 0 #333;
  }

  .errorMessage {
    color: rgb(2, 55, 63);
    font-size: 7px;
    font-family: 'Press Start 2P', cursive;
    text-align: center;
    display: inline-block;
  }

  .errorMessage.shake {
    animation: shake 0.4s ease;
  }

  @keyframes shake {
    0% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    50% { transform: translateX(5px); }
    75% { transform: translateX(-5px); }
    100% { transform: translateX(0); }
 }

 .exit {
    background: none;
    border: none;
    font-size: 24px;
    color: #000;
    top: 10px;
    right: 15px;
  }

  .exit:hover {
    color: rgb(2, 55, 63);
  }	
</style>

<script is:inline>
  document.getElementById('contactForm').addEventListener('submit', function(event) {
    event.preventDefault();

    const email = document.getElementById('emailInput').value.trim();
    const name = document.getElementById('nameInput').value.trim();
    const message = document.getElementById('messageInput').value.trim();
    const errorElement = document.getElementById('error');

    const emailRegex = /^(([^<>()[\]\.,;:\s@\"]+(\.[^<>()[\]\.,;:\s@\"]+)*)|(\".+\"))@(([^<>()[\]\.,;:\s@\"]+\.)+[^<>()[\]\.,;:\s@\"]{2,})$/i;

    let errorMsg = ''; 

    if (!email) {
      errorMsg = '* El email es obligatorio.';
      } else if (!emailRegex.test(email)) {
        errorMsg = '* Por favor, introduzca un email válido.';
      } else if (!name) {
        errorMsg = '* Debe ingresar un nombre.';
      } else if (!message) {
        errorMsg = '* Debe ingresar un mensaje.';
    }


    if (errorMsg) {
      errorElement.textContent = errorMsg;

      errorElement.classList.remove('shake'); 
      void errorElement.offsetWidth;           
      errorElement.classList.add('shake');

      return;
    }

    errorElement.textContent = ''; 
    this.submit(); 
  });

  document.querySelector('#popup .exit').addEventListener('click', function() {
  document.getElementById('popup').classList.remove('active');
});

</script>
